        themselves and should not be mixed with this CSS file.
*/

body {
    font-size: 12px;
}

root {
    display: block;
}

.icon-class {
    width: 20px;
    height: 20px;
}

.tab {
    margin: 0px;
    padding:0px;
}
.panel {
    width: 100%;
    height:620px;
    overflow: auto;
    position: relative;
    top: 0px;
    left: 0px;
}

.processingOverlay {
    display: none;
}
.processingOverlayBottom {
    position: absolute;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
    z-index: 10;
    background-color:rgb(0,0,0);
    opacity:0.4;
    filter:alpha(opacity=40);
}
.processingOverlayTop {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 400px;
    height: 80px;
    padding: 10px;
    z-index: 11;
    border: 2px solid black;
    background-color:rgb(255,255,255);
}
.processingOverlayTop span {
    font-size: 2.0em;
    font-weight: bold;
}

span.bold {
    font-weight: bold;
}

